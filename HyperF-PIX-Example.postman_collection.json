		"_exporter_id": "hyperf-pix-example"
	},
	"item": [
		{
			"name": "API Info",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/",
					"host": [
						"{{base_url}}"
					],
					"path": [
						""
					]
				},
				"description": "Informações gerais da API"
			},
			"response": []
		},
		{
			"name": "Account",
			"item": [
				{
					"name": "Get Account Details",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/account/{{account_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"account",
								"{{account_id}}"
							]
						},
						"description": "Obter detalhes de uma conta específica"
					},
					"response": []
				},
				{
					"name": "Get Account Balance",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/account/{{account_id}}/balance",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"account",
								"{{account_id}}",
								"balance"
							]
						},
						"description": "Obter saldo de uma conta específica"
					},
					"response": []
				}
			],
			"description": "Endpoints relacionados a contas"
		},
		{
			"name": "Withdraw",
			"item": [
				{
					"name": "Create Withdraw (Immediate)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"method\": \"PIX\",\n    \"pix\": {\n        \"type\": \"email\",\n        \"key\": \"joao.silva@example.com\"\n    },\n    \"amount\": 100.50\n}"
						},
						"url": {
							"raw": "{{base_url}}/account/{{account_id}}/balance/withdraw",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"account",
								"{{account_id}}",
								"balance",
								"withdraw"
							]
						},
						"description": "Criar um saque imediato via PIX"
					},
					"response": []
				},
				{
					"name": "Create Withdraw (Scheduled)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"method\": \"PIX\",\n    \"pix\": {\n        \"type\": \"email\",\n        \"key\": \"maria.santos@example.com\"\n    },\n    \"amount\": 250.75,\n    \"schedule\": \"2024-09-15 14:30:00\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/account/{{account_id}}/balance/withdraw",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"account",
								"{{account_id}}",
								"balance",
								"withdraw"
							]
						},
						"description": "Criar um saque agendado via PIX (máximo 7 dias)"
					},
					"response": []
				},
				{
					"name": "Get Withdraw History",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/account/{{account_id}}/withdraws?limit=10",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"account",
								"{{account_id}}",
								"withdraws"
							],
							"query": [
								{
									"key": "limit",
									"value": "10",
									"description": "Número máximo de registros (1-100)"
								}
							]
						},
						"description": "Obter histórico de saques de uma conta"
					},
					"response": []
				},
				{
					"name": "Get Withdraw Details",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/account/{{account_id}}/withdraws/{{withdraw_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"account",
								"{{account_id}}",
								"withdraws",
								"{{withdraw_id}}"
							]
						},
						"description": "Obter detalhes de um saque específico"
					},
					"response": []
				}
			],
			"description": "Endpoints relacionados a saques PIX"
		},
		{
